.text {
    @apply text-base
    text-gray-900
    dark:text-white;

    &.heading,
    & .heading {
    @apply text-3xl
    text-gray-900
    dark:text-white;
    }

    &.headline,
    & .headline {
        @apply text-xl
        text-gray-900
        dark:text-white;
    }

    &.caption,
    & .caption {
        @apply text-xs
        text-gray-900
        dark:text-white;
    }

}